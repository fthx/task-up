<?xml version="1.0" encoding="UTF-8"?>

<schemalist>
    <schema path="/org/gnome/shell/extensions/task-up/" id="org.gnome.shell.extensions.task-up">

    <key type="b" name="show-activities">
        <default>false</default>
        <summary>Show activities indicator</summary>
    </key>

    <key type="b" name="active-workspace">
        <default>false</default>
        <summary>Show tasks on active workspace only</summary>
    </key>

    <key type="b" name="show-icons">
        <default>true</default>
        <summary>Show icons</summary>
    </key>

    <key type="b" name="show-titles">
        <default>true</default>
        <summary>Show titles</summary>
    </key>

    <key type="b" name="show-tooltip">
        <default>true</default>
        <summary>Show tooltip on hover</summary>
    </key>

    <key type="b" name="raise-window">
        <default>true</default>
        <summary>Raise window on hover</summary>
    </key>

    <key type="b" name="border-top">
        <default>true</default>
        <summary>Button border only on top</summary>
    </key>

    <key type="b" name="colored-icons">
        <default>true</default>
        <summary>Colored icons</summary>
    </key>

    <key type="b" name="symbolic-icons">
        <default>false</default>
        <summary>Symbolic icons</summary>
    </key>

    <key type="i" name="buttons-size">
        <default>192</default>
        <summary>Buttons default size</summary>
    </key>

    <key type="i" name="buttons-opacity">
        <default>160</default>
        <summary>Buttons not on active workspace opacity</summary>
    </key>

    <key type="i" name="raise-delay">
        <default>500</default>
        <summary>Delay before raising window and/or tooltip on hover</summary>
    </key>

    </schema>
</schemalist>
